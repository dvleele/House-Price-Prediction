FROM python:3.10-slim

WORKDIR /app

# Copy file requirements (nằm ở ngoài cùng)
COPY ../requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

# Copy code
COPY ../API ./API
COPY ../src ./src

# Mở port 8000
EXPOSE 8000

# Chạy API (main.py nằm trong thư mục API)
CMD ["uvicorn", "API.main:app", "--host", "0.0.0.0", "--port", "8000"]
